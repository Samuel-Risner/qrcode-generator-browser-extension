{
  "name": "browser-extension-template",
  "version": "1.0.0",
  "description": "A template for creating a browser extension (Firefox).",
  "main": "extension/js/dist/bundle.js",
  "scripts": {
    "build_tw": "tailwindcss -i ./tw/input.css -o ./extension/css/dist/output.css --minify",
    "watch_tw": "tailwindcss -i ./tw/input.css -o ./extension/css/dist/output.css --watch",
    "build_wp": "webpack --config webpack.config.js",
    "watch_wp": "webpack --config webpack.config.js --watch",
    "build": "npm run build_tw %% npm run build_wp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samuel-Risner/browser-extension-template.git"
  },
  "author": "Samuel Risner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Risner/browser-extension-template/issues"
  },
  "homepage": "https://github.com/Samuel-Risner/browser-extension-template#readme",
  "dependencies": {
    "tailwindcss": "^3.3.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
